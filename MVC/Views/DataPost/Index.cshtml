@model MVC.Models.StudentModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "DataPost", FormMethod.Post))
{

    <div class="form-group">
        @Html.LabelFor(model=> model.Name)
        @Html.TextBoxFor(model => model.Name, "", new { htmlAttributes = new { @class = "form-control" } })
        <div class="alert alert-danger">
            <strong>danger!</strong>  @Html.ValidationMessageFor(model => model.Name)
        </div>
        <br /><br />
        <label for="issuerKey">LastName</label>
        @Html.TextBoxFor(model => model.LastName, "", new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.LastName, "", new { htmlAttributes = new { @color = "red" } })
        <br /><br />
        <label for="issuerKey">FirstName</label>
        @Html.TextBoxFor(model => model.FirstName, "", new { htmlAttributes = new { @class = "form-control" } })<br /><br />
        <label for="issuerKey">Email</label>
        @Html.TextBoxFor(model => model.Email, "", new { @class = "form -control" } )<br /><br />
        <label for="issuerKey">Description</label>
        @Html.TextBoxFor(model => model.Description, "", new { htmlAttributes = new { @class = "form-control" } })<br /><br />
        <label for="issuerKey">Hobbie</label>
        @Html.DropDownListFor(model => model.Hobbie, new SelectList(ViewBag.Hobbs), new { htmlAttributes = new { @class = "form-control" } })<br /><br />
        <input type="submit" class="btn btn-default" value="Search" />

    </div>
    @Html.ValidationSummary()
}

@if (@ViewBag.Message == "")
{
    <div class="alert alert-success">
        <strong>Success!</strong>  @ViewBag.Message
    </div>
}
else
{
    <div class="alert alert-danger">
        <strong>danger!</strong> @Html.ValidationSummary()
    </div>
}